<!--!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<ui:with
		field='res' type='org.ssg.gui.client.studenthome.StudentHomeworkMessages' />
	
	<g:VerticalPanel>
		<g:cell>
			<g:Label ui:field="moduleName" />
		</g:cell>
		<g:cell>
			<g:HorizontalPanel>
				<g:cell>
					<g:Label>
						<ui:text from='{res.homeworkDetailsAssigned}' />
					</g:Label>
				</g:cell>
				<g:cell>
					<g:Label ui:field="assignDate" />
				</g:cell>
				<g:cell>
					<g:Label>
						<ui:text from='{res.homeworkDetailsComplete}' />
					</g:Label>
				</g:cell>
				<g:cell>
					<g:Label ui:field="completeDate" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel>
				<g:cell>
					<g:Label>
						<ui:text from='{res.homeworkDetailsTeacher}' />
					</g:Label>
				</g:cell>
				<g:cell>
					<g:Label ui:field="teacherName" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell>
			<g:VerticalPanel ui:field="topicList" />
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 