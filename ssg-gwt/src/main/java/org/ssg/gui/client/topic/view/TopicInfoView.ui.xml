<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.floatLeft {
			float: left;
		}
		.floatRight {
			float: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName='widget_title'>
			<g:Label ui:field="topicName" >
			</g:Label>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.floatRight}">
			<g:Label ui:field="topicProgress">
			</g:Label>
		</g:FlowPanel>
		
		<g:FlowPanel styleName='clear'></g:FlowPanel>
		
		<g:FlowPanel styleName="{style.floatLeft}">
			<g:Label ui:field="topicDescription">
			</g:Label>
		</g:FlowPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 