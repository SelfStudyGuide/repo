<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="org.ssg.gui.client.service.res.StudentHomeResources"
		field="res" />
	<ui:with field='msg' type='org.ssg.gui.client.service.res.SsgMessages' />

	<g:HTMLPanel>
		<g:FlowPanel styleName='{res.styles.widget_title}'>
			<g:Label ui:field="topicName">
			</g:Label>
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.styles.floatRight}">
			<g:Label ui:field="topicProgress">
			</g:Label>
		</g:FlowPanel>

		<g:FlowPanel styleName='{res.styles.clear}'></g:FlowPanel>

		<g:FlowPanel styleName="{res.styles.floatLeft}">
			<g:Label ui:field="topicDescription">
			</g:Label>
		</g:FlowPanel>

	</g:HTMLPanel>
</ui:UiBinder> 